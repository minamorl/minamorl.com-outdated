doctype html
html(lang="ja")
  head
    meta(charset="utf-8")

    meta(name="viewport", content="initial-scale=1.0")
    link(rel="stylesheet",href="../lib/normalize.css",type="text/css")
    link(rel="stylesheet",href="../css/main.css",type="text/css")
    link(rel="stylesheet",href="//cdnjs.cloudflare.com/ajax/libs/highlight.js/8.7/styles/tomorrow.min.css",type="text/css")
    title #{title} - minamorl.com
    script(src="//cdnjs.cloudflare.com/ajax/libs/highlight.js/8.7/highlight.min.js" charset="utf-8")
    script hljs.initHighlightingOnLoad();

  body
    header
      .content
        a(class="logo",href="/") minamorl.com
    .content
      article
        h1= title
        time= timestamp
        div!= contents
      #disqus_thread
      script(type="text/javascript").
        var disqus_shortname = 'minamorl';
        /* * * DON'T EDIT BELOW THIS LINE * * */
        (function() {
          var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
            dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
            (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
        })();
