doctype html
html(lang="ja")
  head
    meta(charset="utf-8")

    meta(name="viewport", content="initial-scale=1.0")
    link(rel="stylesheet",href="//cdnjs.cloudflare.com/ajax/libs/highlight.js/8.7/styles/github.min.css",type="text/css")

    block title
      title minamorl.com
    block twitter
      meta(name="twitter:card" content="summary")
      meta(name="twitter:site" content="@minamorl")
      meta(name="twitter:title" content=title + " - minamorl.com")
      meta(name="twitter:description" content=title)

    script(src="//cdnjs.cloudflare.com/ajax/libs/highlight.js/8.7/highlight.min.js" charset="utf-8")
    script(src="/app/bundle.js" charset="utf-8")

  body
    header
      .content
        a(class="logo",href="/") minamorl.com

    .content
      block content
