doctype html
html(lang="ja")
  head
    meta(charset="utf-8")

    script(src="/app/bundle.js" charset="utf-8")
    meta(name="viewport", content="initial-scale=1.0")

    block title
      title minamorl.com
    block twitter
      meta(name="twitter:card" content="summary")
      meta(name="twitter:site" content="@minamorl")
      meta(name="twitter:title" content=title + " - minamorl.com")
      meta(name="twitter:description" content=title)


  body
    header
      .content
        a(class="logo",href="/") minamorl.com

    .content
      block content
